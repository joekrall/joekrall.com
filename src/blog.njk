---
layout: base
title: Blog
tags: page
---

{% for post in collections.post | reverse %}
    <div class="space-between">
        <div>
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <ul class="tags">
        {% for tag in post.data.tags -%}
            {% if tag !== 'post' %}
                <li>{{ tag }}</li>
            {% endif %}
        {%- endfor %}
        </ul>
        </div>
        <time>{{ post.data.page.date.toLocaleDateString('en-US') }}</time>
    </div>
{% endfor %}