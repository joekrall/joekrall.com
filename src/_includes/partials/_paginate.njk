{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}
<br>
<nav class="space-between">
  {% if previousPost %}<a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>{% else %}<br>{% endif %}
  {% if nextPost %}<a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>{% else %}<br>{% endif %}
</nav>