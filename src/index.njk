---
layout: base
title: Blog
tags: page
---

<div class="post-list">
{% for post in collections.posts | reverse %}
    <div class="space-between">
        <div>
            <h2>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <ul class="tags">
            {% for tag in post.data.tags -%}
            {% if tag !== 'posts' %}
                <li>{{ tag }}</li>{% if loop.last === false %},{% endif %}
            {% endif %}
            {%- endfor %}
            </ul>
        </div>
        <time>{{ post.data.page.date.toLocaleDateString('en-US') }}</time>
    </div>
{% endfor %}
</div>